page {
    height: 100%;
    min-height: 100%;
    color: #fff;
    font-family: "Microsoft Yahei", "宋体";
    font-size: 14px;
}

.container {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    color: #fff;
    font-size: 30rpx;
    padding: 20rpx 0;
    box-sizing: border-box;
}

.bcg {
    position: fixed;
    z-index: 2;
    height: 100%;
    width: 100%;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
}

.content {
    flex: 2;
    transition: .3s ease;
    position: relative;
    z-index: 2;
}

.avatarInfo {
    display: flex;
    align-items: center;
    padding: 0 50rpx;
}

.avatarInfo .avatar {
    display: block;
    overflow: hidden;
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
}

.avatarInfo .name {
    padding: 0 20rpx;
    font-size: 30rpx;
}

.avatarInfo .downArrow {
    width: 20rpx;
    height: 20rpx;
}

.info {
    padding: 10rpx 0 50rpx;
}

.city {
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: relative;
    padding: 0 50rpx;
    font-size: 66rpx;
}

.city .name {
    display: flex;
    justify-content: center;
    align-items: center;
}

.city .name .val {
    max-width: 5em;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
}

.city .name .icon,
.city .name .down {
    width: 30rpx;
    height: 30rpx;
}

.city .name .icon {
    margin-right: 20rpx;
}

.city .name .down {
    margin-left: 20rpx;
}

.temp {
    height: 280rpx;
    font-size: 100rpx;
}

.info .temp,
.info .pm,
.info .pm view,
.info .weather {
    position: relative;
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.info .weather {
    margin-bottom: 30rpx;
}

.num {
    font-weight: 300;
}

.weather {
    font-size: 16px;
    text-align: center;
}

.weather-img {
    height: 60rpx;
    display: inline-block;
    width: 84rpx;
}

.des {
    margin-top: 10rpx;
    font-size: 12px;
}

.future {
    display: flex;
    flex-direction: row;
    padding: 10rpx 0 20rpx 5rpx;
    box-shadow: 10px 10px 20px rgba(0, 0, 0, .5);
    height: 400rpx;
    background: #fff;
    background: rgba(0, 0, 0, .1);
    text-align: center;
    justify-content: space-around;
}

.future-item {
    min-height: 100%;
    width: 200rpx;
    margin-left: 10rpx;
    margin-right: 10rpx;
    border: 1px solid #fff;
    border-radius: 10rpx;
    padding-top: 10rpx;
    display: inline-block;
}

.future-item view {
    margin-top: 10px;
    line-height: 1.1em;
}

.livingIndex {
    /* border-bottom: 1rpx solid rgba(240, 240, 240, .4); */
    background: rgba(0, 0, 0, .6);
    margin-bottom: 20rpx;
    z-index: 2;
}

.livingIndex .item {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    border-bottom: 1rpx solid rgba(250, 250, 250, .2);
    padding: 20rpx 0;
    margin: 0 30rpx;
}

.livingIndex .item:last-child {
    border-bottom: none;
}

.livingIndex .item .right {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: flex-start;
    flex: 1;
}

.livingIndex .item .value {
    margin-top: 10rpx;
    font-size: 24rpx;
}

.livingIndex .icon {
    width: 80rpx;
    height: 80rpx;
    padding: 0 24rpx;
}